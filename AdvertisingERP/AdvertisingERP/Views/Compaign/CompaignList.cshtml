@model AdvertisingERP.Models.Compaign

@{
    ViewBag.Title = "CompaignList";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #ff00003b !important;
    }
</style>
<style>
    .mt-btn {
        margin-top: 32px;
    }
</style>
@using (Html.BeginForm("CompaignList", "Compaign", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{

    <div class="clearfix"></div>

    <div class="content-wrapper">
        <div class="container-fluid">
            <div class="col-md-12">
                <div class="page-breadcrumb">
                    <div class="row">
                        <div class="col-5 align-self-center">
                            <h4 class="page-title"></h4>
                            <div class="d-flex align-items-center">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="#">Compaign</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">CompaignList</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="alert alert-success" style="display:@ViewBag.saverrormsg">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span> </button>
                    <h5 class="text-success"><i class="fa fa-check-circle"></i>@TempData["CompaignDelete"]</h5>

                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                       
                                        <label class="input-1">Compaign Code</label>
                                           
                                                @Html.TextBoxFor(m => m.CampaignNo, new { @class = "form-control", @Placeholder = "Compaign Code" })
                                            </div>
                                       
                                    <div class="col-md-4">
                                        
                                            <label class="input-1">Customer Name </label>
                                         

                                                <input type="text" id="customername" class="form-control" placeholder="Customer Name" />
                                                @Html.HiddenFor(m => m.CustomerId)
                                            
                                        </div>
                               
                                    <div class="col-md-4">
                                    

                                         
                                                <input type="submit" value="Get Details" class="btn btn-light list-button mt-btn" name="GetDetails" onclick="return getdeatils();" />

                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <!--/span-->
                              

                                <div class="table-responsive">
                                    <table id="file_export" class="table table-striped table-bordered display">
                                        <thead>
                                            <tr>

                                                <th>Campaign Code</th>
                                                <th>Customer Name</th>
                                                <th>Creative Name</th>
                                                <th>Start Date</th>
                                                <th>End Date</th>
                                                <th>Description</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.lstCompaign != null)
                                                {
                                                    foreach (var item in Model.lstCompaign)
                                                    {
                                                        <tr>

                                                            <td>@item.CampaignNo</td>
                                                            <td>@item.CustomerName</td>
                                                            <td>@item.CreativeName</td>
                                                            <td>@item.StartDate</td>
                                                            <td>@item.EndDate</td>
                                                            <td>@item.Decription</td>
                                                            <td>
                                                                <a href="/Compaign/CampaignMaster?CompaignId=@item.CompaignId" class="label label-primary"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                                                &nbsp;
                                                                @*<a href="/Compaign/DeleteCompaign?CompaignId=@item.CompaignId" onclick="return confirm('Sure you want to delete this Campaign ?');" class="label label-danger">Delete</a>*@
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            }

                                        </tbody>
                                        <tfoot>
                                            <tr>

                                                <th>Campaign Code</th>
                                                <th>Customer Name</th>
                                                <th>Creative Name</th>
                                                <th>Start Date</th>
                                                <th>End Date</th>
                                                <th>Description</th>
                                                <th>Action</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
       
                }
<script src="~/assets/libs/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(function () {

        var cityuse = [];

        $.ajax({
            url: '/Compaign/GetAllCustomer', type: 'Post', success: function (response) {

                if (response != null) {

                    $(response).each(function (index, item) { // GETTING ERROR HERE
                        cityuse.push(item.CompanyName + "(" + item.CustomerCode + ")");

                    });



                    $('#customername').autocomplete({
                        source: cityuse,
                        select: function (event, ui) {
                            var str = ui.item.label;
                            var afterComma = str.substr(str.indexOf("(") + 1);
                            var citycode = afterComma.substr(0, afterComma.length - 1);
                            $('#CustomerId').val(citycode);
                        }
                    })


                }
                else {

                }
            }, error: function () { alert('Some Thing wrong!'); }
        });

        $("#divload").css({ 'display': 'none' });


    });

    function getdeatils() {
        $("#divload").css({ 'display': '' });
    }


</script>




