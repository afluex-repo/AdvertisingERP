@model AdvertisingERP.Models.SaleOrder
@{
    ViewBag.Title = "InvoiceNo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    .px-5{
        margin-top:4px;
    }
</style>
@using (Html.BeginForm("InvoiceNo", "SaleOrder", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Sale Order</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">InvoiceNo</li>
                    </ol>
                </nav>
            </div>
            @if (TempData["InvoiceNo"] != null)
            { <div class="@TempData["Class"]">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
            <h5 class="text-success"><i class="fa fa-check-circle"></i>&nbsp; @TempData["InvoiceNo"]</h5>
        </div>
            } @*
        <div class="ms-auto">
            <div class="btn-group">
                <a href="/Master/BankList" class="btn btn-light list-button">Back To List</a>
            </div>
        </div>
            *@
        </div>
        <hr />
        <div class="card">
            <div class="card-body">
                <div class="p-4 border rounded">
                    <div class="row g-3">
                        <div class="col-md-6 mt-2">
                            <label class="index-1">Invoice No </label>

                            @Html.TextBoxFor(m => m.InvoiceNo, new { @class = "form-control", @Placeholder = "Invoice No", @readonly = "true" })
                        </div>

                        <div class="col-md-3 mt-2">
                            <div class="form-group row">
                                <div class="col-md-9">
                                    <input type="submit" value="Generate Invoice No" class="btn btn-light" name="btnGenerateInvoiceNo" onclick="return generateInvoiceNo()" style="margin-top:29px;" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive mt-4">
                        <table id="file_export" class="table table-striped table-bordered display">
                            <thead>
                                <tr>
                                    <th>Action</th>
                                    <th>Invoice No</th>
                                    <th>Invoice Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.lstInvoiceNo != null)
                                    {
                                        foreach (var item in Model.lstInvoiceNo)
                                        {
                                            <tr>
                                                <td>
                                                    @if (item.LineStatus == "Mapped")
                                                    {
                                                        <label class="label label-primary">Mapped</label>
                                                        <a href="/SaleOrder/Invoice?InvoiceNo=@item.InvoiceNo" class="label label-primary">Print</a>
                                                    }
                                                    else
                                                    {
                                                        <a href="/SaleOrder/GenerateBill?invid=@item.PK_InvoiceNoID&no=@item.SaleOrderNoEncrypt" class="label label-primary">Generate Bill</a>
                                                        @*<a href="/SaleOrder/PrintSO?SaleOrderId=@item.PK_InvoiceNoID" class="label label-primary">Print</a>*@ }
                                                </td>
                                                <td>@item.InvoiceNo</td>
                                                <td>@item.InvoiceDate</td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Action</th>
                                    <th>Invoice No</th>
                                    <th>Invoice Date</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
     </div>
}

            <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
        <script>
    $(document).ready(function () {
        $("#InvoiceNo").val("CAA/2019-20/");
        $("#divload").css({ display: "none" });
    });
    function generateInvoiceNo() {
        var result = confirm("Are you sure you want to generate New Invoice Number ?");
        if (result == false) {
            return false;
        }
        $("#divload").css({ display: "" });
    }
        </script>
