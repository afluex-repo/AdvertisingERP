@model AdvertisingERP.Models.PO

@{
    ViewBag.Title = "POList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using (Html.BeginForm("POList", "PurchaseOrder", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
    <div class="content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-7">
                                    <div class="form-group row">
                                        <label class="control-label text-right col-md-3">Purchase Order No </label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(m => m.PONumber, new { @class = "form-control form-control", @Placeholder = "Purchase Order No", @readonly = "true" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <input type="submit" value="Generate Purchase Order" class="btn btn-light" name="Generate" onclick="return confirm('Are you sure you want to generate New Purchase Order ?');" />
                                        </div>
                                           <div class="form-group col-9 text-right">
                                            @if (TempData["GenerateOrder"] != null)
                                            {
                                                <span class="card-title text-white">@TempData["GenerateOrder"]</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="table-responsive">
                                <table id="file_export" class="table table-striped table-bordered display">
                                    <thead>
                                        <tr>
                                            <th>Action</th>
                                            <th>Sale OrderNo</th>
                                            <th>PO No</th>
                                            <th>PO Date</th>
                                            <th>CampaignNo</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstPO != null)
                                            {
                                                foreach (var item in Model.lstPO)
                                                {
                                                    <tr>
                                                        <td>
                                                            @if (item.SaleOrderNumber != null && item.SaleOrderNumber != "")
                                                            {
                                                                <a href="/PurchaseOrder/PrintPO?poNumber=@item.EncryptKey" target="_blank" class="label label-primary">Print</a>
                                                            }
                                                            else
                                                            {
                                                                <a href="/PurchaseOrder/PO?purchaseno=@item.EncryptKey" title="Edit" class="label label-primary"><i class="fa fa-edit text-success"></i></a>
                                                            }
                                                            &nbsp;&nbsp;&nbsp;
                                                            <a href="/PurchaseOrder/EditPO?pon=@item.EncryptKey" title="Force Edit" class="label label-primary"><i class="fa fa-edit text-danger"></i></a>
                                                        </td>
                                                        <td>@item.SaleOrderNumber</td>
                                                        <td>@item.PONumber</td>
                                                        <td>@item.PODate</td>
                                                        <td>@item.CampaignNumber</td>

                                                    </tr>
                                                }
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {


        $("#divload").css({ 'display': 'none' });
    });
</script>