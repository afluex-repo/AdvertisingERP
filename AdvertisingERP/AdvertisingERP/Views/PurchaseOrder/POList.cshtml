@model AdvertisingERP.Models.PO

@{
    ViewBag.Title = "POList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using (Html.BeginForm("POList", "PurchaseOrder", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Purchase Order</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">

                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Generate Purchase Order</li>
                    </ol>
                </nav>
            </div>
        </div>

        <hr />
        <div class="card">
            <div class="card-body">
                <div class="p-4 border rounded">
                    <div class="row  g-3">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="control-label text-right col-md-3">Purchase Order No </label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.PONumber, new { @class = "form-control form-control", @Placeholder = "Purchase Order No", @readonly = "true" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <input type="submit" value="Generate Purchase Order" class="btn btn-light" name="Generate" onclick="return confirm('Are you sure you want to generate New Purchase Order ?');" />
                                </div>
                                <div class="form-group col-8 text-right">
                                    @if (TempData["GenerateOrder"] != null)
                                    {
                                        <span class="card-title text-white">@TempData["GenerateOrder"]</span>
                                    }
                                </div>
                            </div>
                        </div>

                      </div>
                </div>
                <div class="p-4 border rounded">
                    <div class="row g-3">
                        <div class="table-responsive">
                            <table id="example2" class="table table-striped table-bordered display">
                                <thead>
                                    <tr>
                                        <th>Action</th>
                                        <th>Sale OrderNo</th>
                                        <th>PO No</th>
                                        <th>PO Date</th>
                                        <th>CampaignNo</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstPO != null)
                                        {
                                            foreach (var item in Model.lstPO)
                                            {
                                                <tr>
                                                    <td>
                                                        @if (item.SaleOrderNumber != null && item.SaleOrderNumber != "")
                                                        {
                                                            <a href="/PurchaseOrder/PrintPO?poNumber=@item.EncryptKey" target="_blank" class="label label-primary">Print</a>
                                                        }
                                                        else
                                                        {
                                                            <a href="/PurchaseOrder/PO?purchaseno=@item.EncryptKey" title="Edit" class="label label-primary"><i class="fadeIn animated bx bx-message-square-edit font-22 text-success"></i></a>
                                                        }
                                                        &nbsp;&nbsp;&nbsp;
                                                        <a href="/PurchaseOrder/EditPO?pon=@item.EncryptKey" title="Force Edit" class="label label-primary"><i class="fadeIn animated bx bx-message-square-edit font-22 text-danger"></i></a>
                                                    </td>
                                                    <td>@item.SaleOrderNumber</td>
                                                    <td>@item.PONumber</td>
                                                    <td>@item.PODate</td>
                                                    <td>@item.CampaignNumber</td>

                                                </tr>
                                            }
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                </div>
            </div>
        </div>

}
