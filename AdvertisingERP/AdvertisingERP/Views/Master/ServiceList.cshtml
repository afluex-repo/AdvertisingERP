@model AdvertisingERP.Models.Master

@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/Shared/_layout.cshtml";
}


<div class="clearfix"></div>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="page-wrapper">

            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-md-12 align-self-center">
                        <h4 class="page-title"></h4>
                        <div class="d-flex align-items-center">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Masters</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Service List</li>
                                </ol>
                            </nav>
                        </div>
                    </div>

                </div>
            </div>

           @using (Html.BeginForm("ServiceList", "Master", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
           {
                <div class="alert alert-success" style="display:@ViewBag.saverrormsg">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span> </button>
                    <h5 class="text-success"><i class="fa fa-check-circle"></i>@TempData["ServiceDelete"]</h5>

                </div>
                 <div class="alert alert-success" style="display:none">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span> </button>
                    <h5 class="text-success"><i class="fa fa-check-circle"></i></h5>

                </div>
                <div class="row">
                    <div class="col-12">

                        <div class="card">
                            <div class="card-body">

                                <div class="m-b-0 card-title">
                                    Service List
                                    <a href="/Master/ServiceMaster" class="btn btn-light list-button">Add Service</a>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <div class="col-md-12">
                                                <label class="control-label">HSN Code </label> 
                                                @Html.TextBoxFor(m => m.HSNCode, new { @class = "form-control", @Placeholder = "HSN Code" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <div class="col-md-12">
                                                <input type="submit" value="Get Details" class="btn btn-light btndown" name="GetDetails" onclick="return getdeatils()" />
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="table-responsive">
                                    <table id="example2" class="table table-striped table-bordered display">
                                        <thead>
                                            <tr>
                                                <th>Service Name</th>
                                                <th>HSN Code</th>

                                                <th>CGST</th>
                                                <th>IGST</th>
                                                <th>SGST</th>
                                                <th>Action</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.lstSites != null)
                                                {
                                                    foreach (var item in Model.lstSites)
                                                    {
                                                        <tr>
                                                            <td>@item.ServiceName</td>
                                                            <td>@item.HSNCode</td>
                                                            <td>@item.CGST</td>
                                                            <td>@item.IGST</td>
                                                            <td>@item.SGST</td>
                                                            <td>
                                                                <a href="/Master/ServiceMaster?ServiceId=@item.ServiceId" class="text-warning" title="Edit"><i class="fa fa-pencil"></i></a>
                                                                &nbsp;
                                                                <a href="/Master/DeleteService?ServiceId=@item.ServiceId" onclick="return confirm('Do you want to delete this Service ?');" class="label label-danger"><i class="fa fa-trash"></i></a>
                                                            </td>

                                                        </tr>
                                                    }
                                                }
                                            }

                                        </tbody>
                                        @*<tfoot>
                                            <tr>
                                                <th>Action</th>
                                                <th>Service Name</th>
                                                <th>HSN Code</th>

                                                <th>CGST</th>
                                                <th>IGST</th>
                                                <th>SGST</th>

                                            </tr>
                                        </tfoot>*@
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
        </div>
    </div>
</div>
<script src="/assets/libs/jquery/dist/jquery.min.js"></script>
<script>

    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });
    });
    function getdeatils() {
        $("#divload").css({ 'display': '' });
    }
</script>
