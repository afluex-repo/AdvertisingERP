@model AdvertisingERP.Models.Master

@{
    ViewBag.Title = "BankList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("BankList", "Master", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
    <div class="page-content">
        <div class="content-wrapper">
            <div class="container-fluid">
                <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                    <div class="breadcrumb-title pe-3">Master</div>
                    <div class="ps-3">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Bank List</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="ms-auto">
                        <div class="btn-group">
                            <a href="/Master/BankMaster" class="btn btn-light list-button">Add Bank</a>

                        </div>
                    </div>
                </div>
                <hr />


                @*<div class="alert alert-success" style="display:@ViewBag.saverrormsg">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span> </button>
                        <h5 class="text-success"><i class="fa fa-check-circle"></i>@TempData["ServiceDelete"]</h5>
                    </div>*@

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example2" class="table table-striped table-bordered display">
                                        <thead>
                                            <tr>
                                                <th>Bank Name</th>
                                                <th>IFSC Prefix</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.lstBanks != null)
                                                {
                                                    foreach (var item in Model.lstBanks)
                                                    {
                                                        <tr>
                                                            <td>@item.BankName</td>
                                                            <td>@item.IFSCPrefix</td>
                                                            <td>
                                                                <a href="/Master/BankMaster?bid=@item.EncryptKey" class="label label-primary"><i class="bx bx-edit"></i></a>
                                                                &nbsp;
                                                                <a href="/Master/DeleteBankMaster?bid=@item.EncryptKey" onclick="return confirm('Do you want to delete this Bank ?');" class="label label-danger"><i class="bx bx-trash"></i></a>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
        }
        <script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
        <script>

            $(document).ready(function () {
                $("#divload").css({ 'display': 'none' });
            });

        </script>
