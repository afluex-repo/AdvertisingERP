@model AdvertisingERP.Models.Master

@{
    ViewBag.Title = "BankList";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@using (Html.BeginForm("BankList", "Master", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-5 align-self-center">
                    <h4 class="page-title"></h4>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Masters</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Bank List</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

       
            <div class="alert alert-success" style="display:@ViewBag.saverrormsg">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span> </button>
                <h5 class="text-success"><i class="fa fa-check-circle"></i>@TempData["ServiceDelete"]</h5>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="m-b-0 card-title">
                                Bank List
                                <a href="/Master/BankMaster" class="btn btn-light list-button">Add Bank</a>
                            </div>
                            <div class="table-responsive">
                                <table id="file_export" class="table table-striped table-bordered display">
                                    <thead>
                                        <tr>
                                            <th>Bank Name</th>
                                            <th>IFSC Prefix</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstBanks != null)
                                            {
                                                foreach (var item in Model.lstBanks)
                                                {
                                                    <tr>
                                                        <td>@item.BankName</td>
                                                        <td>@item.IFSCPrefix</td>
                                                        <td>
                                                            <a href="/Master/BankMaster?bid=@item.EncryptKey" class="label label-primary"><i class="fa fa-pencil"></i></a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
       
    </div>
</div>
}
<script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
<script>

    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });
    });

</script>
