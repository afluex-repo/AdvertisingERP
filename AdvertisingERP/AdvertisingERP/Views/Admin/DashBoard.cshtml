@model AdvertisingERP.Models.Admin

@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@using (Html.BeginForm("DashBoard", "Admin", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
 {
<div class="clearfix"></div>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-md-12">
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-5 align-self-center">
                        <h4 class="page-title"></h4>
                        <div class="d-flex align-items-center">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Admin</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">DashBoard</li>
                                </ol>
                            </nav>
                        </div>
                    </div>

                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="m-b-0 card-title">
                        DashBoard
                    </div>
                    <hr>
              
                        <div class="row">
                            <h5 class="card-title">PO List(Bill not recieved)</h5>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered" id="example" width="100px">
                                    <thead>
                                        <tr>
                                            <th>PO No</th>
                                            <th>CampaignNo</th>
                                            <th>Creative Name</th>
                                            <th>Bill No</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstSaleOrders != null)
                                            {
                                                int i = 0;
                                                foreach (var item in Model.lstSaleOrders)
                                                {
                                                    <tr>
                                                        <td>@item.PurchasOrderNo</td>
                                                        <td>@item.CampaignNo</td>
                                                        <td>@item.CreativeName</td>
                                                        <td>
                                                            <input type="text" class="form-control" id="bill_@i" />
                                                        </td>
                                                        <td>
                                                            <a id="update" onclick="return updatebillno('@i','@item.PurchasOrderNo')" class="btn btn-primary">Update</a>
                                                        </td>
                                                    </tr>
                                                    i++;
                                                }

                                            }
                                        }

                                    </tbody>

                                </table>
                            </div>
                        </div>
                        <div class="row"></div>
                        <br />
                        <div class="row">
                            <h5 class="card-title">SO List</h5>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered" id="example" width="100px">
                                    <thead>
                                        <tr>

                                            <th>Invoice No</th>
                                            <th>Creative Name</th>
                                            <th>StartDate</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstbill != null)
                                            {
                                                int i = 0;
                                                foreach (var item in Model.lstbill)
                                                {
                                                    <tr>



                                                        <td>@item.InvoiceNo</td>
                                                        <td>
                                                            @item.CreativeName
                                                        </td>
                                                        <td>
                                                            @item.StartDate
                                                        </td>
                                                        <td>
                                                            <a id="update" onclick="return updateso('@i','@item.InvoiceNo')" class="btn btn-primary">Update</a>
                                                        </td>


                                                    </tr>
                                                    i++;
                                                }

                                            }
                                        }

                                    </tbody>

                                </table>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
</div>
}
<script src="~/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
<script src="~/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>

<script>

    $(document).ready(function () {
        $('#example').DataTable()
    });

</script>


<script>
    $(document).ready(function () {
        var table = $('#example2').DataTable({
            lengthChange: false,
            buttons: ['copy', 'excel', 'pdf', 'print']
        });

        table.buttons().container()
            .appendTo('#example2_wrapper .col-md-6:eq(0)');
    });
</script>
<!--app JS-->
<script src="~/assets/js/app.js"></script>
