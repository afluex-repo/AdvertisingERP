@model AdvertisingERP.Models.Admin

@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("DashBoard", "Admin", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Home</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Dash Board</li>
                    </ol>
                </nav>
            </div>
           
        </div>
        <hr />
      
        <div class="card">
            <div class="card-body">
                <div class="p-4 border rounded">
                    <div class="row g-3">
                        <h5 class="card-title">PO List(Bill not recieved)</h5>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="example2">
                                <thead>
                                    <tr>
                                        <th>PO No</th>
                                        <th>CampaignNo</th>
                                        <th>Creative Name</th>
                                        <th>Bill No</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstSaleOrders != null)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.lstSaleOrders)
                                            {
                                                <tr>
                                                    <td>@item.PurchasOrderNo</td>
                                                    <td>@item.CampaignNo</td>
                                                    <td>@item.CreativeName</td>
                                                    <td>
                                                        <input type="text" class="form-control" id="bill_@i" />
                                                    </td>
                                                    <td>
                                                        <a id="update" onclick="return updatebillno('@i','@item.PurchasOrderNo')" class="btn btn-primary">Update</a>
                                                    </td>
                                                </tr>
                                                i++;
                                            }

                                        }
                                    }

                                </tbody>

                            </table>
                        </div>
                    </div>
                    <div class="row"></div>
                    <br />
                    <div class="row g-3">
                        <h5 class="card-title">SO List</h5>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="example2" >
                                <thead>
                                    <tr>

                                        <th>Invoice No</th>
                                        <th>Creative Name</th>
                                        <th>StartDate</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                                            {
                                                                if (Model.lstbill != null)
                                                                {
                                                                    int i = 0;
                                                                    foreach (var item in Model.lstbill)
                                                                    {
                                                            <tr>



                                                                <td>@item.InvoiceNo</td>
                                                                <td>
                                                                    @item.CreativeName
                                                                </td>
                                                                <td>
                                                                    @item.StartDate
                                                                </td>
                                                                <td>
                                                                    <a id="update" onclick="return updateso('@i','@item.InvoiceNo')" class="btn btn-primary">Update</a>
                                                                </td>


                                                            </tr>
                                                                        i++;
                                                                    }

                                                                }
                                                            }

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>

                }
                <script src="~/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
                <script src="~/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>

                <script>

                    $(document).ready(function () {
                        $('#example').DataTable()
                    });

                </script>


                <script>
                    $(document).ready(function () {
                        var table = $('#example2').DataTable({
                            lengthChange: false,
                            buttons: ['copy', 'excel', 'pdf', 'print']
                        });

                        table.buttons().container()
                            .appendTo('#example2_wrapper .col-md-6:eq(0)');
                    });
                </script>
                <!--app JS-->
                <script src="~/assets/js/app.js"></script>
