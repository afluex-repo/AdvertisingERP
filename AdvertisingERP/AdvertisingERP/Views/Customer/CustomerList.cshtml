@model AdvertisingERP.Models.Customer

@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<style>
    .mt-btn {
    margin-top: 32px;
}
</style>
<div class="clearfix"></div>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-md-12">
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-5 align-self-center">
                        <h4 class="page-title"></h4>
                        <div class="d-flex align-items-center">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Customer</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">CustomerList</li>
                                </ol>
                            </nav>
                        </div>
                    </div>

                </div>
            </div>
             @using (Html.BeginForm("CustomerList", "Customer", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
            {
                <div class="alert alert-success" style="display:@ViewBag.saverrormsg">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span> </button>
                    <h5 class="text-success"><i class="fa fa-check-circle"></i>@TempData["CustomerDelete"]</h5>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="m-b-0 card-title">
                            CustomerList
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-4 ">
                                    <label for="input-1">Customer Name</label>
                                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", @Placeholder = "Customer Name" })

                                </div>
                                <div class="col-md-4">
                                    <label for="input-1">
                                        Customer Code
                                    </label>
                                    @Html.TextBoxFor(m => m.CustomerCode, new { @class = "form-control", @Placeholder = "Customer Code" })   
                            </div>
                            <div class="col-md-4">
                                @*<label for="input-1">
                                    .
                                </label>*@

                                <input type="submit" value="Get Details" class="btn btn-light list-button mt-btn" name="GetDetails" onclick="return getdeatils();" />
                            </div>
                            
                            </div>
                         
                        <br />
                        <div class="row">
                        
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered" id="example2" width="100px">
                                    <thead>
                                        <tr>
                                           
                                            <th>Customer Code</th>
                                            <th>Customer Name</th>
                                            <th>Contact</th>
                                            <th>Email</th>
                                            <th>Nature</th>
                                            <th>Bank Details</th>
                                            <th>Address</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstcustomer != null)
                                            {
                                                foreach (var item in Model.lstcustomer)
                                                {
                                                    <tr>
                                                     
                                                        <td>@item.CustomerCode</td>
                                                        <td>@item.CompanyName</td>
                                                        <td>@item.MobileNo</td>
                                                        <td>@item.Email</td>
                                                        <td>@item.NatureOfBusiness</td>
                                                        <td>@item.BankName @item.AccountNo @item.IFSCCode @item.BankAddress</td>
                                                        <td>@item.Address @item.StateName @item.City @item.Pincode</td>
                                                        <td>
                                                            <a href="/Customer/AddCustomer?CustomerId=@item.CompanyId" class="label label-primary"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                                            &nbsp;
                                                            <a href="/Customer/DeleteCustomer?CustomerId=@item.CompanyId" onclick="return confirm('Sure you want to delete this Customer ?');" class="label label-danger"><i class="fa fa-trash" aria-hidden="true" style="color:red"></i></a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        }

                                    </tbody>

                                </table>
                            </div>
                        </div>
                        <div class="row"></div>
                        <br />
                     

                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script src="~/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
<script src="~/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>

<script>

        $(document).ready(function () {
            $('#example').DataTable()
        });

</script>


<script>
        $(document).ready(function () {
            var table = $('#example2').DataTable({
                lengthChange: false,
                buttons: ['copy', 'excel', 'pdf', 'print']
            });

            table.buttons().container()
                .appendTo('#example2_wrapper .col-md-6:eq(0)');
        });
</script>
<!--app JS-->
<script src="~/assets/js/app.js"></script>
